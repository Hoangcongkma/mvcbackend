    <div class="main__show">
        <div class="tag__video_show">
                <div id="go__video" class="show__video">
                    <h2 class="ml-5">Khóa học {{course.name}} </h2>
                    <h5 id="bai" class="ml-5">Bài {{course.bai.[0]}} </h5>                 
                    <iframe  width="100%" height="500" src="https://www.youtube.com/embed/{{course.videoId1.[0]}}" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>           
                    <div class="info__video">
                        <h5><b class="text-info">Nội dung khóa {{course.name}}:</b> {{course.mota}}</h5>
                    </div>
                </div> 
                <div class="menu__video">
                    {{> menuvideo}}
                </div>
        </div>   
    </div>
    <script>
        window.onload = function () {
            location.replace('#go__video')
        }
    </script>
   